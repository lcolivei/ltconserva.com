---
// src/pages/index.astro 
import Navbar from '../components/Navbar.astro';
---
<html lang="pt-BR" class="scroll-smooth">
  <head>
    <!-- mesmo head de antes + isso aqui -->
    <style global>
      @import url('https://fonts.googleapis.com/css2?family=Clash+Display:wght@600&family=Inter:wght@400;500;600&display=swap');
      html { font-family: 'Inter', system-ui; scroll-behavior: smooth; }
      h1, h2 { font-family: 'Clash Display', sans-serif; }
    </style>
  </head>
  <body class="bg-[#0d0d0d] text-[#e4e4e7]">
    <Navbar />
    <main class="pt-24 min-h-screen flex items-center justify-center">
      <div class="text-center px-6">
        <h1 class="text-6xl md:text-8xl font-bold mb-6 leading-tight">
          Lucas Oliveira
        </h1>
        <p class="text-3xl md:text-5xl text-[#a3ff75] mb-8">
          Desenvolvedor Full Stack
        </p>
        <p class="text-xl md:text-2xl opacity-80 max-w-2xl mx-auto">
          Java • Python • JavaScript • HTML • CSS<br/>
          Transformando café em código que resolve problemas reais
        </p>
      </div>
    </main>
  </body>
</html>
